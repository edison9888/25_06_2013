			<KPIs totalScore="50">
				<KPI marks="10"><![CDATA[Customer Results Score]]></KPI>
				<KPI marks="30"><![CDATA[Sales Progress Score]]></KPI>
				<KPI marks="10"><![CDATA[Trusted Advisor Relationship Score]]></KPI>
			</KPIs>
			<branchTo><![CDATA[OTS_SA_R2_D080_A010]]></branchTo>
		</choice>
